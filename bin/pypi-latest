#!/bin/sh
#
#   Get the latest version of a package from PyPI.
#
#   Usage: pypi-latest <package>
#
#   Requires: curl, jq
#
#   Example: pypi-latest django
#
package=$1
if [ -z "$package" ]; then
    echo "Usage: pypi-latest <package>"
    exit 1
fi
curl -s https://pypi.org/pypi/$1/json | echo "$1 >=$(jq -r .info.version)"
