"$schema" = 'https://starship.rs/config-schema.json'

format = """
[](surface)\
$os\
$username\
[](bg:yellow fg:surface)\
$directory\
[](fg:yellow bg:green)\
$git_branch\
$git_status\
[](fg:green bg:sky)\
$rust\
$golang\
$bun\
$nodejs\
$python\
$ruby\
$zig\
[](fg:sky bg:sapphire)\
$time\
[ ](fg:sapphire)\
$line_break$character"""

palette = 'custom'
add_newline = false

[palettes.custom]
red = "#f38ba8"
yellow = "#f9e2af"
green = "#a6e3a1"
sky = "#89dceb"
sapphire = "#74c7ec"
blue = "#89b4fa"
lavender = "#b4befe"
text = "#cdd6f4"
surface = "#313244"
mantle = "#181825"

[line_break]
disabled = false

[os]
disabled = false
style = "bg:surface fg:text"

[username]
show_always = true
style_user = "bg:surface fg:text"
style_root = "bg:surface fg:text"
format = '[ $user ]($style)'

[os.symbols]
Windows = "󰍲"
Ubuntu = "󰕈"
SUSE = ""
Raspbian = "󰐿"
Mint = "󰣭"
Macos = "󰀵"
Manjaro = ""
Linux = "󰌽"
Gentoo = "󰣨"
Fedora = "󰣛"
Alpine = ""
Amazon = ""
Android = ""
Arch = "󰣇"
Artix = "󰣇"
EndeavourOS = ""
CentOS = ""
Debian = "󰣚"
Redhat = "󱄛"
RedHatEnterprise = "󱄛"
Pop = ""


[directory]
style = "fg:mantle bg:yellow"
format = "[ $path ]($style)"
truncation_length = 3
truncation_symbol = "…/"

[directory.substitutions]
"Documents" = "󰈙 "
"Downloads" = " "
"Music" = "󰝚 "
"Pictures" = " "
"Developer" = "󰲋 "

[time]
disabled = false
time_format = "%R"
style = "bg:sapphire"
format = '[[  $time ](fg:mantle bg:sapphire)]($style)'

[character]
disabled = false
success_symbol = '[](bold fg:green)'
error_symbol = '[](bold fg:red)'
vimcmd_symbol = '[](bold fg:green)'
vimcmd_replace_one_symbol = '[](bold fg:purple)'
vimcmd_replace_symbol = '[](bold fg:purple)'
vimcmd_visual_symbol = '[](bold fg:lavender)'

[git_branch]
symbol = ""
style = "bg:green"
format = '[[ $symbol $branch ](fg:mantle bg:green)]($style)'

[git_status]
style = "bg:green"
format = '[[($all_status$ahead_behind )](fg:mantle bg:green)]($style)'
ahead = '⇡${count}'
diverged = '⇕⇡${ahead_count}⇣${behind_count}'
behind = '⇣${count}'

[nodejs]
symbol = ""
style = "bg:sky"
format = '[[ $symbol( $version) ](fg:mantle bg:sky)]($style)'
detect_files = ['!bun.lockb', '!bun.lock', 'package.json', '.node-version']

[bun]
symbol = "󰚅 "
style = "bg:sky"
format = '[[ $symbol($version) ](fg:mantle bg:sky)]($style)'

[rust]
symbol = ""
style = "bg:sky"
format = '[[ $symbol( $version) ](fg:mantle bg:sky)]($style)'

[golang]
symbol = ""
style = "bg:sky"
format = '[[ $symbol( $version) ](fg:mantle bg:sky)]($style)'

[python]
symbol = ""
style = "bg:sky"
format = '[[ $symbol( $version) (\($virtualenv\)) ](fg:mantle bg:sky)]($style)'
python_binary = ["./.venv/bin/python", "python3"]

[ruby]
symbol = ""
style = "bg:sky"
format = '[[ $symbol( $version) ](fg:mantle bg:sky)]($style)'

[zig]
symbol = ""
style = "bg:sky"
format = '[[ $symbol( $version) ](fg:mantle bg:sky)]($style)'
